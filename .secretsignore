# Patterns and files to exclude from secret scanning

# Type definition files (false positives from API method names)
public/tinymce/tinymce.d.ts
*.d.ts

# The secret scanner script itself
scripts/scan-for-secrets.ts

# Security manager that checks for patterns (not using them)
src/security/SecureKeyManager.ts

# Files with commented out code
src/utils/backup.ts

# Scripts that use service role key properly (server-side only)
src/mcp/fix-support-email-rls.ts

# Test files with example data
*.test.ts
*.test.tsx
*.spec.ts
*.spec.tsx

# Files with false positive patterns
src/components/RegistrationVerificationModal.tsx
src/middleware/resource-authorization.ts
src/mcp/*.ts
fix-rls-issues-secure.ts

# AI Configuration files with false positives from state variable names
src/pages/AIConfiguration*.tsx

# Services with billing/notification patterns
src/services/billingService.ts
src/services/emailNotificationService.ts
src/services/simpleNotificationService.ts

# Components with example/test data
src/components/AdminCouponManager.tsx

# Pages with payment references
src/pages/Pricing.tsx

# Config files with domain-restricted keys
src/config/tinymce.ts

